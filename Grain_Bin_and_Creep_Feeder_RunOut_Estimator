<body>

<div class="app-header">
    <h1>HerdMate | Summer Command</h1>
</div>

<div id="view-grain" class="container">
    <div class="card">
        <div class="section-title">15-Ton Bin Inventory</div>
        <div class="flex-row">
            <div>
                <label>Inventory (Tons)</label>
                <input type="number" id="binLevel" value="12.5" oninput="updateBin()">
            </div>
            <div style="text-align:right;">
                <label>Est. Bags Left</label>
                <div class="status-val" id="binBagsLeft">--</div>
            </div>
        </div>
    </div>

    <div class="card" style="border-left: 5px solid var(--blue);">
        <div class="section-title" style="color: var(--blue);">Hand-Bag Calculator</div>
        
        <div class="flex-row">
            <div>
                <label>Bag Size (Lbs)</label>
                <input type="number" id="bagSize" value="40" oninput="calcBags()">
            </div>
            <div>
                <label>Lbs / Head</label>
                <input type="number" id="grainRate" value="3" oninput="calcBags()">
            </div>
        </div>
        <div>
            <label>Head Count</label>
            <input type="number" id="bagHead" placeholder="Enter Head" oninput="calcBags()">
        </div>

        <div id="bagOutput" class="hidden">
            <div class="bag-result">
                <span class="bag-count" id="resBags">0</span>
                <span class="bag-sub">Bags to Fill</span>
                <div style="font-size:0.75rem; margin-top:5px; font-weight: bold;">(Total Load: <span id="resLbs">0</span> lbs)</div>
            </div>
            <button class="btn-action btn-confirm" onclick="deductInventory()">Confirm & Deduct Inventory</button>
        </div>
    </div>
</div>

<div id="view-creep" class="container hidden">
    <div class="card">
        <div class="section-title">Creep Feeder Tracking</div>
        <label>Last Delivery Date</label>
        <input type="date" id="creepDate">
        
        <div class="flex-row" style="margin-top:12px;">
            <div>
                <label>Tons Delivered</label>
                <input type="number" id="creepTons" value="5">
            </div>
            <div>
                <label>Avg. Intake (lbs)</label>
                <input type="number" id="creepIntake" value="6">
            </div>
        </div>
        <label>Calf Head Count</label>
        <input type="number" id="creepHead" value="45">

        <button class="btn-action" onclick="checkCreep()">Check Feeder Status</button>

        <div id="creepStatus" style="margin-top:20px;"></div>
    </div>
</div>

<div class="nav-bar">
    <button class="nav-btn active" id="nav-grain" onclick="switchTab('grain')">1. Grain & Bags</button>
    <button class="nav-btn" id="nav-creep" onclick="switchTab('creep')">2. Creep Feeder</button>
</div>

<script>
    // --- APP LOGIC ---
    function switchTab(tab) {
        document.getElementById('view-grain').classList.toggle('hidden', tab !== 'grain');
        document.getElementById('view-creep').classList.toggle('hidden', tab !== 'creep');
        document.getElementById('nav-grain').classList.toggle('active', tab === 'grain');
        document.getElementById('nav-creep').classList.toggle('active', tab === 'creep');
        if(tab === 'grain') updateBin();
    }

    function updateBin() {
        const tons = parseFloat(document.getElementById('binLevel').value) || 0;
        const bSize = parseFloat(document.getElementById('bagSize').value) || 1;
        const bags = Math.floor((tons * 2000) / bSize);
        document.getElementById('binBagsLeft').innerText = bags.toLocaleString();
    }

    function calcBags() {
        const size = parseFloat(document.getElementById('bagSize').value) || 1;
        const rate = parseFloat(document.getElementById('grainRate').value) || 0;
        const head = parseFloat(document.getElementById('bagHead').value) || 0;
        
        if (head <= 0) {
            document.getElementById('bagOutput').classList.add('hidden');
            return;
        }

        const totalLbs = head * rate;
        const bagsNeeded = Math.ceil(totalLbs / size);

        document.getElementById('resBags').innerText = bagsNeeded;
        document.getElementById('resLbs').innerText = totalLbs.toLocaleString();
        document.getElementById('bagOutput').classList.remove('hidden');
        updateBin();
    }

    function deductInventory() {
        const totalLbs = parseFloat(document.getElementById('resLbs').innerText.replace(/,/g, ''));
        const currentTons = parseFloat(document.getElementById('binLevel').value);
        const newLevel = currentTons - (totalLbs / 2000);
        
        document.getElementById('binLevel').value = newLevel.toFixed(2);
        updateBin();
        document.getElementById('bagOutput').classList.add('hidden');
        document.getElementById('bagHead').value = '';
        alert("Inventory Updated. Bin at " + newLevel.toFixed(2) + " tons.");
    }

    function checkCreep() {
        const deliveredLbs = (parseFloat(document.getElementById('creepTons').value) || 0) * 2000;
        const intake = parseFloat(document.getElementById('creepIntake').value) || 0;
        const head = parseFloat(document.getElementById('creepHead').value) || 0;
        const dateInput = document.getElementById('creepDate').value;

        if(!dateInput) return alert("Select delivery date.");
        
        const daysGone = Math.ceil(Math.abs(new Date() - new Date(dateInput)) / (1000 * 60 * 60 * 24)); 
        const remainingLbs = deliveredLbs - (intake * head * daysGone);
        const daysLeft = Math.round(remainingLbs / (intake * head));

        const div = document.getElementById('creepStatus');
        if (remainingLbs <= 0) {
            div.innerHTML = `<div class="longevity-disp" style="color:var(--red);">EMPTY</div><div style="text-align:center; color:#888;">RAN OUT APPROX. ${Math.abs(daysLeft)} DAYS AGO</div>`;
        } else {
            div.innerHTML = `<div class="longevity-disp">${daysLeft} Days</div><div style="text-align:center; color:#888;">REMAINING UNTIL EMPTY</div>`;
        }
    }

    // Default Date
    document.getElementById('creepDate').valueAsDate = new Date();
    updateBin();
</script>

</body>
