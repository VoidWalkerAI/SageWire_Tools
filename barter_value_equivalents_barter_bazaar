            <input type="number" id="qtyB" value="1" placeholder="1">

            <label for="condB">Condition / Quality:</label>
            <select id="condB">
                <option value="1.0">Mint / Like New (100%)</option>
                <option value="0.8" selected>Good / Used (80%)</option>
