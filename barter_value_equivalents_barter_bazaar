<script>
    // --- UI Logic: Toggle Goods vs Services ---
    function setMode(side, mode, btnElement) {
        // Update hidden input
        document.getElementById(`mode${side}`).value = mode;

        // Update button styles
        const btns = btnElement.parentElement.getElementsByClassName('mode-btn');
        Array.from(btns).forEach(b => b.classList.remove('active'));
        btnElement.classList.add('active');

        // Update Labels
        const labelVal = document.getElementById(`labelVal${side}`);
        const labelQty = document.getElementById(`labelQty${side}`);

        if (mode === 'service') {
            labelVal.innerText = 'Hourly Rate ($):';
            labelQty.innerText = 'Hours of Labor:';
        } else {
            labelVal.innerText = 'Fair Market Value ($ per item):';
            labelQty.innerText = 'Quantity:';
        }
    }

    function toggleHelp() {
        const content = document.getElementById('helpContent');
        if (content.style.display === 'none') {
            content.style.display = 'block';
        } else {
            content.style.display = 'none';
        }
    }

    // --- Core Logic: The Calculation ---
    function evaluateTrade() {
        // 1. Get Values Side A
        const valA = parseFloat(document.getElementById('valA').value) || 0;
        const qtyA = parseFloat(document.getElementById('qtyA').value) || 0;
        const condA = parseFloat(document.getElementById('condA').value);
        const nameA = document.getElementById('nameA').value || 'Your Item';

        // 2. Get Values Side B
        const valB = parseFloat(document.getElementById('valB').value) || 0;
        const qtyB = parseFloat(document.getElementById('qtyB').value) || 0;
        const condB = parseFloat(document.getElementById('condB').value);
        const nameB = document.getElementById('nameB').value || 'Their Item';

        // 3. Calculate Total "True Value"
        // Formula: (Base Value * Quantity) * Condition Multiplier
        const totalA = (valA * qtyA) * condA;
        const totalB = (valB * qtyB) * condB;

        // Show Results Area
        document.getElementById('resultsArea').style.display = 'block';
        
        // 4. Update Fairness Meter
        // We want a percentage difference relative to the total pot
        // 50% is perfectly even. <50% means A is low, >50% means A is high.
        let totalPot = totalA + totalB;
        if (totalPot === 0) totalPot = 1; // Prevent divide by zero

        const percentageA = (totalA / totalPot) * 100;
        
        // Move needle: 0% = left, 100% = right. 
        // We clamp it between 5% and 95% so it stays visible inside the bar.
        const clampedPercent = Math.max(5, Math.min(95, percentageA));
        document.getElementById('meterNeedle').style.left = clampedPercent + "%";

        // 5. Generate Verdict
        const verdictTitle = document.getElementById('verdictTitle');
        const verdictDetail = document.getElementById('verdictDetail');
        const cashKickerArea = document.getElementById('cashKickerArea');

        let diff = totalA - totalB;
        let diffAbs = Math.abs(diff);

        // Define "Fair" as within 10% difference
        const threshold = totalPot * 0.05; 

        if (Math.abs(diff) <= threshold) {
            // Fair Trade
            verdictTitle.innerText = "‚úÖ It's a Fair Trade!";
            verdictTitle.style.color = "#27ae60";
            verdictDetail.innerHTML = `Both sides are bringing roughly equal value (~$${totalA.toFixed(2)} vs ~$${totalB.toFixed(2)}).`;
            cashKickerArea.innerHTML = "";
        } else {
            // Unfair Trade
            verdictTitle.innerText = "‚ö†Ô∏è Values are Unbalanced";
            verdictTitle.style.color = "#d35400";
            
            if (totalA > totalB) {
                // You are giving too much
                verdictDetail.innerHTML = `You are offering more value ($${totalA.toFixed(2)}) than you are receiving ($${totalB.toFixed(2)}).`;
                cashKickerArea.innerHTML = `<div class='cash-kicker'>Ask them to add <strong>$${diffAbs.toFixed(2)}</strong> cash to make it even.</div>`;
            } else {
                // They are giving too much
                verdictDetail.innerHTML = `You are receiving more value ($${totalB.toFixed(2)}) than you are offering ($${totalA.toFixed(2)}).`;
                cashKickerArea.innerHTML = `<div class='cash-kicker'>You should add <strong>$${diffAbs.toFixed(2)}</strong> cash to make it even.</div>`;
            }
        }
    }
</script>

